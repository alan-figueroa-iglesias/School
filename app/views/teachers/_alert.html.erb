<% if flash[:success] %>
  <div class="alert alert-success alert-dismissible fade show fixed-notification" role="alert">
    <i class="fa-solid fa-check-circle me-2"></i> <%= flash[:success] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if @alert_message %>
  <div class="alert alert-danger alert-dismissible fade show fixed-notification" role="alert">
    <i class="fa-solid fa-triangle-exclamation me-2"></i> <%= @alert_message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if flash[:warning] %>
  <div class="alert alert-warning alert-dismissible fade show fixed-notification" role="alert">
    <i class="fa-solid fa-triangle-exclamation me-2"></i> <%= flash[:warning] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
