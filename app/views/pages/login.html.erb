<section class="vh-100" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://img.freepik.com/free-vector/green-fluid-background-frame-vector_53876-162336.jpg?w=740&t=st=1693778023~exp=1693778623~hmac=bb472c98c1e3a2cd0fc0d04f624fdca0240d43868e69abb2a62121849ac7fcda"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form action="/login" method="post">
                  <%= csrf_meta_tags %>
                  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">


                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #4e8c01;"></i>
                    <span class="h1 fw-bold mb-0">Logo</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <input class="form-control form-control-lg" name="account" required maxlength="8" pattern="[0-9]{1,8}">
                    
                    <label class="form-label" for="form2Example17">Account</label>
                  </div>                  

                  <div class="form-outline mb-4">
                    <input class="form-control form-control-lg"  type="password" name="password" id="password" required>
                    <label class="form-label" for="form2Example27">Password</label>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-success btn-lg btn-block" type="submit">Login</button>
                  </div>

                  <a class="small text-muted" href="#!">Forgot password?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="#!"
                      style="color: #393f81;">Register here</a></p>
                  <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a>
                </form>
                <%= render 'alert' %>  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>